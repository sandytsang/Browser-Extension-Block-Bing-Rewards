{
  "manifest_version": 3,
  "name": "Bing Rewards Blocker",
  "short_name": "Reward Block",
  "version": "1.0.0",
  "description": "Blocks Bing rewards API to hide the rewards icon and count from Bing.com",
  "author": "Sandy Zeng",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.bing.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Bing Rewards Blocker"
  }
}
